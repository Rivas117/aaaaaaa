<!doctype html>
<html lang="en">

<head>
    <title>{{title}}</title>
</head>

<header class="header" id="header">
    <div class="header__border"></div>
    <nav class="nav container">
        <a href="{{menuOptions.[0].url}}" class="nav__logo">
            <img src="{{menuOptions.[0].imagen}}" alt="Logo">
            {{title}}
        </a>
        <div class="nav__menu">
            <ul class="nav__list">
                {{#each menuOptions}}
                <li class="nav__item">
                    <a href="{{url}}" class="nav__link {{#if active}}active{{/if}}">
                        <i class="{{icono}}"></i>
                        <span>{{label}}</span>
                    </a>
                </li>
                {{/each}}
            </ul>
        </div>
    </nav>
</header>